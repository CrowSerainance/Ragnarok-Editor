<Window x:Class="ROMapOverlayEditor.TownExportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export Town Data"
        Width="700" Height="550"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Export Format:" FontWeight="Bold"/>

        <ComboBox Grid.Row="1" x:Name="FormatCombo" Margin="0,8" SelectedIndex="0" SelectionChanged="FormatCombo_SelectionChanged">
            <ComboBoxItem Content="Lua Format (for Towninfo.lub)"/>
            <ComboBoxItem Content="rAthena Script Format"/>
            <ComboBoxItem Content="Changelog (diff from original)"/>
        </ComboBox>

        <TextBox Grid.Row="2" x:Name="OutputBox" IsReadOnly="True" FontFamily="Consolas" FontSize="12"
                 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" TextWrapping="NoWrap"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Copy to Clipboard" Width="140" Click="CopyButton_Click"/>
            <Button Content="Save to File" Width="100" Margin="8,0,0,0" Click="SaveButton_Click"/>
            <Button Content="Close" Width="80" Margin="8,0,0,0" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
