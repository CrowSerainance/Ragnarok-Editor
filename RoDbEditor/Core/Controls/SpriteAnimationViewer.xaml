<UserControl x:Class="RoDbEditor.Core.Controls.SpriteAnimationViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="256" d:DesignWidth="256"
             Background="#1E1E1E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Sprite Canvas -->
        <Border Grid.Row="0" Background="#2D2D30" BorderBrush="#3F3F46" BorderThickness="1">
            <Canvas x:Name="SpriteCanvas" ClipToBounds="True">
                <Image x:Name="SpriteImage" 
                       RenderOptions.BitmapScalingMode="NearestNeighbor"
                       Canvas.Left="0" Canvas.Top="0"/>
            </Canvas>
        </Border>
        
        <!-- Playback Controls -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="4">
            <Button x:Name="BtnPrevAction" Content="◀◀" Width="30" Margin="2" Click="BtnPrevAction_Click" ToolTip="Previous Action"/>
            <Button x:Name="BtnPrevFrame" Content="◀" Width="30" Margin="2" Click="BtnPrevFrame_Click" ToolTip="Previous Frame"/>
            <Button x:Name="BtnPlayPause" Content="▶" Width="30" Margin="2" Click="BtnPlayPause_Click" ToolTip="Play/Pause"/>
            <Button x:Name="BtnNextFrame" Content="▶" Width="30" Margin="2" Click="BtnNextFrame_Click" ToolTip="Next Frame"/>
            <Button x:Name="BtnNextAction" Content="▶▶" Width="30" Margin="2" Click="BtnNextAction_Click" ToolTip="Next Action"/>
            <TextBlock x:Name="TxtInfo" VerticalAlignment="Center" Foreground="White" Margin="8,0,0,0" Text="Action 0 / Frame 0"/>
        </StackPanel>
    </Grid>
</UserControl>
